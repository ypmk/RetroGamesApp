<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#161853"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/playerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Космонавт"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:fontFamily="@font/kenney_rocket"
        android:textColor="#Fff"
        />

    <TextView
        android:id="@+id/playerOneScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="0"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@+id/playerOne"
        app:layout_constraintLeft_toLeftOf="@+id/playerOne"
        app:layout_goneMarginLeft="40dp"
        android:fontFamily="@font/kenney_rocket"
        android:textColor="#FAEDF0"
        />
    <TextView
        android:id="@+id/playerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пришелец"
        android:textSize="25sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/kenney_rocket"
        android:textColor="#Fff"
        />
    <TextView
        android:id="@+id/playerTwoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="35sp"
        app:layout_constraintTop_toBottomOf="@+id/playerTwo"
        app:layout_constraintRight_toRightOf="@+id/playerTwo"
        android:layout_marginRight="35dp"
        android:fontFamily="@font/kenney_rocket"
        android:textColor="#FAEDF0"
        />
    <TextView
        android:id="@+id/playerStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textAlignment="center"
        android:text="player one is winning!"
        app:layout_constraintTop_toBottomOf="@+id/playerOneScore"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:fontFamily="@font/kenney_rocket"
        android:textColor="#Fff"
        />

    <ImageView
        android:id="@+id/img_alien"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_alien_3"
        />
    <ImageView
        android:id="@+id/img_astronaut"
        android:layout_width="45dp"
        android:layout_height="45dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_people_6"
        />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="#Fff"
        app:layout_constraintTop_toBottomOf="@+id/playerStatus"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        />
    <Button
        android:id="@+id/btn_1"
        android:backgroundTint="#Fff"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/playerStatus"
        app:layout_constraintLeft_toRightOf="@+id/btn_0"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        />
    <Button
        android:id="@+id/btn_2"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold"
        android:backgroundTint="#Fff"
        app:layout_constraintTop_toBottomOf="@+id/playerStatus"
        app:layout_constraintLeft_toRightOf="@+id/btn_1"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="8dp"
        />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:backgroundTint="#Fff"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_0"
        android:layout_marginLeft="8dp"
        />

    <Button
        android:id="@+id/btn_4"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:backgroundTint="#Fff"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_3"
        app:layout_constraintTop_toBottomOf="@+id/btn_0"
        android:layout_marginLeft="8dp"
        />
    <Button
        android:id="@+id/btn_5"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#Fff"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_4"
        app:layout_constraintTop_toBottomOf="@+id/btn_0"
        />
    <Button
        android:id="@+id/btn_6"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:backgroundTint="#Fff"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_3"
        android:layout_marginLeft="8dp"
        />
    <Button
        android:id="@+id/btn_7"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#Fff"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_6"
        app:layout_constraintTop_toBottomOf="@+id/btn_4"
        />
    <Button
        android:id="@+id/btn_8"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="#Fff"
        android:textColor="#fff"
        android:textSize="60sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn_7"
        app:layout_constraintTop_toBottomOf="@+id/btn_5"
        />
    <Button
        android:id="@+id/resetGame"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Начать новую игру"
        android:textColor="#fff"
        android:backgroundTint="#EC255A"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@+id/btn_6"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="3dp"
        />
    <Button
        android:id="@+id/revenge"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Реванш!!"
        android:textColor="#fff"
        android:backgroundTint="#9C27B0"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/resetGame"
        />
    <Button
        android:id="@+id/toCatalog"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="каталог"
        android:textColor="#fff"
        android:backgroundTint="#3F51B5"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/revenge"
        />

</androidx.constraintlayout.widget.ConstraintLayout>