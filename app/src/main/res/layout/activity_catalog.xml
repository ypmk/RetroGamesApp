<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CatalogActivity"
    android:background="@color/space">

    <TextView
        android:id="@+id/firstGame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/game_1"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:fontFamily="@font/kenney_rocket"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_firstGame" />


    <ImageView
        android:id="@+id/btn_firstGame"
        android:layout_width="145dp"
        android:layout_height="145dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="150dp"
        android:backgroundTint="@color/space"
        android:background="@drawable/ic_tic_1_2"
        android:layout_marginStart="15dp"
        android:src="@drawable/q_7" />

    <TextView
        android:id="@+id/secondGame"
        android:text="Квиз"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kenney_rocket"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_secondGame"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <ImageView
        android:id="@+id/btn_secondGame"
        android:layout_width="145dp"
        android:layout_height="145dp"
        app:layout_constraintTop_toBottomOf="@+id/firstGame"
        android:backgroundTint="@color/space"
        android:background="@drawable/ic_tic_1_2"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="40dp"
        android:src="@drawable/q_8" />


</androidx.constraintlayout.widget.ConstraintLayout>