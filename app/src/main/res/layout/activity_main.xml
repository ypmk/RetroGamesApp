<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/space"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btn_startApp"
        android:layout_width="126dp"
        android:layout_height="87dp"
        android:background="@color/white"
        android:backgroundTint="@color/space"
        android:text="play"
        android:textSize="25sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/firstText"
         />

    <TextView
        android:id="@+id/firstText"
        android:layout_width="308dp"
        android:layout_height="89dp"
        android:layout_marginTop="288dp"
        android:text="Space Games"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:layout_width="153dp"
        android:layout_height="156dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="36dp"
        android:src="@drawable/planet_5"
        app:layout_constraintTop_toBottomOf="@id/btn_startApp"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_4"
        android:layout_width="138dp"
        android:layout_height="159dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="35dp"
        android:src="@drawable/ic_people_1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_startApp" />

    <ImageView
        android:id="@+id/img_5"
        android:layout_width="100dp"
        android:layout_height="133dp"
        android:layout_marginEnd="4dp"
        android:src="@drawable/rocket_1"
        app:layout_constraintTop_toBottomOf="@+id/firstText"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
         />

    <ImageView
        android:id="@+id/img_3"
        android:layout_width="155dp"
        android:layout_height="127dp"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_planet_3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="120dp"

         />

    <ImageView
        android:id="@+id/img_1"
        android:layout_width="95dp"
        android:layout_height="107dp"
        android:src="@drawable/planet_4"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="60dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="40dp"/>

    <ImageView
        android:id="@+id/img_2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/planet_8"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="220dp"
        android:layout_marginTop="45dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>